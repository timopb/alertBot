{
  "general": {
    "reverseDns": false,
    "restartOnChange": false,
    "watchedFiles": ["config.json", "filter.json"],
    "watchInterval": 30
  },
  "filter": {
    "enabled": false,
    "path": "filter.json"
  },
  "sensors": {
    "snort": {
      "enabled": false,
      "logSourceType": "file",
      "filePath": "path/to/alertFile",
      "logType": "full",
      "interface": "LAN"
    },
    "suricata": {
      "enabled": false,
      "logSourceType": "file",
      "filePath": "path/to/eve.json",
      "logType": "eve",
      "interface": "WAN"
    },
    "paloalto": {
      "enabled": false,
      "logSourceType": "http",
      "ip": "",
      "port": 443,
      "apikey": "",
      "logType": "threat",
      "interface": "TAP",
      "pullInterval": 2,
      "nlogs": 20
    }
  },
  "notify": {
    "enabled": false,
    "notifyOnStartUp": false,
    "blackListedFields": ["rev", "revision", "sid", "pri", "priority", "payload", "seqno"],
    "agents": [
            {
                "name": "telegram",
                "enabled": false,
                "token": "TOKEN",
                "chat_id": 99999999
            },
            {
                "name": "discord",
                "enabled": false,
                "webhookUrl": "webhook url",
                "useEmbed": false
            },
            {
              "name": "webhook",
              "enabled": false,
              "url": "webhook url"
            },
            {
              "name": "teams",
              "enabled": false,
              "url": "teams connector webhook url"
            }
        ]
  },
  "logging": {
    "version": 1,
    "formatters": {
      "default": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "datefmt": "%Y:%m:%d %H:%M:%S"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "formatter": "default",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "filename": "alertBot.log",
        "formatter": "default",
        "maxBytes": 3000000,
        "backupCount": 3
      }
    },
    "loggers":{
      "alertBot": {
        "handlers": ["console", "file"],
        "level": "INFO"
      }
    }
  }
}
